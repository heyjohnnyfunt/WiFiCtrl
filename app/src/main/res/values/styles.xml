<resources>

    <style name="AppTheme" parent="Theme.AppCompat"/><!--.Light.DarkActionBar-->

    <style name="AppDefault" parent="AppTheme">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorPrimary</item>

    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardBackgroundColor">@color/lightBackground</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/colorPrimary</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    </style>
</resources>
